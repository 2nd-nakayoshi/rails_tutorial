
<% if object.errors.any? %>
    <div id="error_explanation">
        <div class="error alert-danger">
            エラー詳細
            <%= pluralize(object.errors.count, "error") %>...
        
            <ul>
                <% object.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>