<div class="index-body">
    
    <div class="index-header">
        <h2>ブログ一覧</h2>
    </div>
  
    <div class="col-md-8">
        <div class="index-content">
            <% @blogs.each do |blog| %>
                <div class="card col-6">
                    <div class="card-header border-primary">
                        <h3 class="card-title"><%= blog.title%></h4>
                        <h4 class="card-subtitle md-2 text-muted"><%= blog.user.name %></h6>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <%= simple_format(blog.content)%>
                        </p>
                    </div>
                    <nav class="navbar card-footer">
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav  navbar-right">
                                <li class="nav-item　active">
                                    <%= link_to  "詳細表示", blog_path(blog.id), class: "nav-link"  %>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            <% end %>
        </div>
    </div>
    <div class="col-md-3 side-var">
            <%= render 'shared/search_form' %>
     </div>
</div>

