<body class="index-body">
    <div class="col-md-6 col-md-offset-2">
        <div class="col-4 col-md-offset-2">
        <%= form_for(@blog) do |f| %>
        <h2><%= yield(:page_title) %></h2>
            <%= render 'shared/error_messages', object: f.object %>
             <div class="form-group">
                <%= f.label :title, "タイトル" %>
                <%= f.text_field :title, class: "form-control", placeholder: "タイトル" %>
            </div>
             <div class="form-group">
                <%= f.label :content, "本文" %>
                <%= f.text_area :content, class: "form-control", placeholder: "本文" %>
            </div>
            <%= f.submit yield(:button_text), class: "btn btn-primary btn-block" %>
        <% end %>
        </div>
    </div>
</body>