
<%= form_for(@blog) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <p>
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :content, "本文" %>
        <%= f.text_area :content %>
    </p>
    <%= f.submit yield(:button_text) %>
<% end %>