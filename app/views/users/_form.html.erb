<body class="form-body">    
    <div class="center">
        <%= form_for(@user) do |f| %>
            <h2><%= yield(:page_title) %></h2>
            <div class="form-group">
                <%= f.label :name, "名前" %>
                <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
            </div>
            <div class="form-group"> 
                <%= f.label :email, "メール" %>
                <%= f.text_field :email, class: "form-control", placeholder: "メール" %>
            </div>
            <div class="form-group">
                <%= f.label :password, "パスワード" %>
                <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
            </div>
            <div class="form-group">
                <%= f.label :password_confirmation, "パスワード確認" %>
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認" %>
            </div>
            <p>    
                <%= f.submit yield(:button_text), class: "btn btn-primary btn-block" %>
            </p>
        <% end %>
    </div>
</body>